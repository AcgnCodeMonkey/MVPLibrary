<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <com.xujl.widgetlibrary.widget.RefreshLayout android:id="@+id/activity_image_list_refreshLayout"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical">
        <android.support.v7.widget.RecyclerView android:id="@+id/activity_image_list_recyclerView"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/layoutBg">
        </android.support.v7.widget.RecyclerView>
    </com.xujl.widgetlibrary.widget.RefreshLayout>
</LinearLayout>