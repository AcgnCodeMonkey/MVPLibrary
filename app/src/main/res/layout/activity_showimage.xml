<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_showimage_rootView"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/menuBackground"
              android:orientation="vertical">
    <ImageView android:id="@+id/activity_showimage_imageView"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="0dp"
                                                     android:layout_centerInParent="true"
                                                     android:layout_marginTop="50dp"
                                                     android:layout_weight="1"
                                                     android:adjustViewBounds="true"
                                                     android:scaleType="fitXY"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:weightSum="6">
        <ImageButton android:id="@+id/activity_showimage_downloadIBtn"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:background="@null"
                     android:padding="@dimen/dp_10"
                     android:src="@drawable/showimage_download"/>
        <ImageButton android:id="@+id/activity_showimage_deleteIBtn"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:background="@null"
                     android:padding="@dimen/dp_10"
                     android:src="@drawable/showimage_delete"/>
        <ImageButton android:id="@+id/activity_showimage_collectionIBtn"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:background="@null"
                     android:padding="@dimen/dp_10"
                     android:src="@drawable/showimage_collection"/>
    </LinearLayout>
</LinearLayout>